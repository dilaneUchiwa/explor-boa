# URLs statiques et médias
STATIC_URL=/static/
MEDIA_URL=/media/

# Leaflet (coordonées de Douala)
LEAFLET_CONFIG_DEFAULT_CENTER=4.0511,9.7679
LEAFLET_CONFIG_DEFAULT_ZOOM=6